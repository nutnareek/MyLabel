<Window x:Class="MyLabel.InstructionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLabel"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Instruction" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Instructions" Grid.Row="0" Margin="20 20 20 10" FontWeight="Bold" Height="Auto"/>
        <TextBlock x:Name="TbInstructions" Grid.Row="1" Margin="20 0 20 20" Height="Auto"/>
    </Grid>
</Window>
